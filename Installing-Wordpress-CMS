BLOG SEARCH RESULTS

//Add to functions.php

add_action('pre_get_posts', 'change_search_limit');
function change_search_limit($query){
    $number_of_posts = 99;
    if ( $query->is_main_query() && is_search() )
        $query->set('posts_per_page', $number_of_posts);
}

//Create file search.php, copy whichever secondary template you would like it to look like and paste in.

