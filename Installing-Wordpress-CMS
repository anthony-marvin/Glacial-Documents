/* Enqueue Scripts and CSS */
function register_styles() {
  wp_register_style( 'normalize', get_template_directory_uri() . '/css/normalize.css', array(), null, 'all' );
  wp_enqueue_style( 'normalize' );

  wp_register_style( 'webflow', get_template_directory_uri() . '/css/components.css', array( 'normalize' ), null, 'all' );
  wp_enqueue_style( 'webflow' );

  wp_register_style( 'main_site_style', get_template_directory_uri() . '/css/corneal-consultants-of-colorado.css', array( 'webflow' ), null, 'all' );
  wp_enqueue_style( 'main_site_style' );

  wp_register_style( 'main_site_overrides', get_template_directory_uri() . '/style.css', array( 'main_site_style' ), null, 'all' );
  wp_enqueue_style( 'main_site_overrides' );

}
add_action( 'wp_enqueue_scripts', 'register_styles' );
function register_scripts() {
  wp_deregister_script( 'jquery' );
  wp_register_script( 'jquery', 'https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js', array(), null, false );
  wp_enqueue_script( 'jquery' );
  
  wp_register_script( 'fryjs', get_template_directory_uri() . '/js/corneal-consultants-of-colorado.js', array( 'jquery' ), null, true  );
  wp_enqueue_script( 'fryjs' );
  
  wp_register_script( 'webfontscript', 'https://ajax.googleapis.com/ajax/libs/webfont/1.4.7/webfont.js', array( 'jquery' ), null, true  );
  wp_enqueue_script( 'webfontscript' );


	wp_add_inline_script( 'webfontscript', 'WebFont.load({
	  google: {
	    families: ["PT Serif:400,400italic,700,700italic","Source Sans Pro:200,200italic,300,300italic,regular,italic,600,600italic,700,700italic,900,900italic","Source Serif Pro:regular,600,700"]
	  }
	});' );
	wp_enqueue_script('webfontscript');
}
add_action( 'wp_enqueue_scripts', 'register_scripts' );

