/* Put Into Functions */
function mytheme_list_pages($param) {
	$pages = get_pages($param); 
	foreach ( $pages as $page ) {
	$li  = '<li><a href="' . get_page_link( $page->ID ) . '" title="';
	$li .= esc_attr($page->post_title);
	$li .= '">';
	$li .= $page->post_title;
	$li .= '</a></li>';
	echo $li;
	}
}
